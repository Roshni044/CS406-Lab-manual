public class Car {
    // Fields (attributes)
    private String color; // Corrected field declaration
    private String model;

    // Constructor
    public Car(String color, String model) {
        this.color = color; // Corrected assignment syntax
        this.model = model;
    }

    // Method to display car information
    public void displayInfo() { // Corrected method signature
        System.out.println("Car model: " + model + ", Color: " + color); // Corrected syntax
    }

    // Main method to create and use objects of Car class
    public static void main(String[] args) {
        Car myCar = new Car("Red", "Toyota Corolla"); // Corrected object creation syntax
        myCar.displayInfo(); // Calling displayInfo method on myCar object
    }
}
